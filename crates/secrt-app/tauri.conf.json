{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Secrt",
  "version": "0.14.5",
  "identifier": "ca.secrt.app",
  "build": {
    "beforeDevCommand": "SECRT_API_ORIGIN=https://secrt.ca pnpm dev",
    "beforeBuildCommand": "pnpm build:tauri",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../web/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Secrt",
        "width": 650,
        "height": 834,
        "minWidth": 380,
        "minHeight": 500,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src ipc: http://ipc.localhost https://secrt.ca; img-src 'self' data: blob:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.icns", "icons/icon.ico", "icons/icon.png"],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
