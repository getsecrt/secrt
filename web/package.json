{
  "name": "secrt-web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.5.2",
  "scripts": {
    "preinstall": "node -e \"const ua=process.env.npm_config_user_agent||''; if(!ua.includes('pnpm/')){console.error('ERROR: Use pnpm (not npm/yarn).'); process.exit(1)}\"",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write 'src/**/*.{ts,tsx,css}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,css}'"
  },
  "engines": {
    "pnpm": ">=10.5.2"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "fzstd": "^0.1.1",
    "preact": "^10.27.2",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@vitest/coverage-v8": "^3.0.0",
    "happy-dom": "^17.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.8.2",
    "vite": "^7.3.1",
    "vitest": "^3.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
